
@{
    ViewBag.Title = "Settings";
}
<body>


    <div class="container">
        <form>
            <h3>Account</h3>
            <div class="label">First Name:</div> <input type="text" name="firstName" class="text"/><br />
            <div class="label">Last Name:</div> <input type="text" name="lastName" class="text" /><br />
            <div class="label">Birthday:</div> <input type="text" name="birthday" class="text" /><br />
            <div class="label">Phone Number:</div> <input type="text" name="phoneNumber" class="text" /><br />
